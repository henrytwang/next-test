<div class="row large-6 large-centered columns">
  <h1 class="main-title">A/B Testing</h1>
  <h2 class="secondary-title">Get actionable advice on which A/B tests to run on your landing page.</h2>
</div>


<div class="row url-form">
  <div class="large-8 large-centered columns">
    <%= form_for @page, url: pages_path, remote: true, class: "landing-page-form" do |f| %>
        <div class="row collapse">
          <div class="large-10 columns">
            <%= f.text_field :url, placeholder: "Paste a link to your page", class: "text-field" %>
          </div>
          <div class="large-2 columns">
            <%= f.submit "Start Testing" %>
          </div>
        </div>
      </div>
    <% end %>
</div>

<div id="new_page"></div>